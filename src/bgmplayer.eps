function time() {
    return -dwread_epd(EPD(0x51CE8C));
}

var dsttimer;

function startTimer(duration) {
    dsttimer = time() + duration - 42;
}

function isTimerHit() {
    if(dsttimer <= time()) return 1;
    else return 0;
}

const bgmContent = py_open('src/bgm22050.wav', 'rb').read();

function bgmloop() {
    MPQAddWave('staredit\\wav\\bgmmain.wav', bgmContent);

    if(isTimerHit()) {
        startTimer(54857);
        SetCurrentPlayer(getuserplayerid());
        PlayWAV('staredit\\wav\\bgmmain.wav');
    }
}
