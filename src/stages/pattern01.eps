// 사방에서 계단

import stages.py_timeline as tL;
import bulletTools as bTool;

function stagestart() {
    // Stage starter
}

function stageproc() {
    // Stagle processor
    // eudplib에서 for timer in tL.Timeline(8 * 16): 이랑 동일합니다.
    foreach(timer : tL.Timeline(8 * 16)) {
        if(timer % 8 == 0) {
            var row;
            if(timer < 8 * 8) row = 1 + (timer / 8);
            else row = 17 - (timer / 8);
            bTool.shootUTiled($P7, $U('Fast Missile'), 5, row);
            bTool.shootLTiled($P8, $U('Fast Missile'), 5, 10 - row);
            bTool.shootDTiled($P7, $U('Fast Missile'), 5, 10 - row);
            bTool.shootRTiled($P8, $U('Fast Missile'), 5, row);
        }
    }
}

///////////////////////////////////////////////////////////////////////////////

const funcs = [
    DBString("Cross stage"),
    EUDFuncPtr(0, 0)(f_stagestart),
    EUDFuncPtr(0, 0)(f_stageproc)
];
